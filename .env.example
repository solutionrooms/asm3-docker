# PostgreSQL Database Configuration
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_PORT=5433

# ASM3 Application Configuration  
ASM3_PORT=8090

# Optional: Redis Configuration (uncomment if using Redis)
# REDIS_PORT=6379

# Optional: Memcached Configuration
MEMCACHED_PORT=11212

# ASM3 Application Settings (used in asm3.conf)
ASM3_DB_HOST=postgres
ASM3_DB_PORT=5432
ASM3_DB_NAME=asm
ASM3_DB_USER=asm3
ASM3_DB_PASSWORD=asm3_secure_password

# Application URLs - Switch between local and production
# For local development:
ASM3_BASE_URL=http://localhost:8090
ASM3_SERVICE_URL=http://localhost:8090/service

# For production:
# ASM3_BASE_URL=https://yourdomain.com
# ASM3_SERVICE_URL=https://yourdomain.com/service

# Locale and Timezone
ASM3_LOCALE=en
ASM3_TIMEZONE=0

# Email Configuration (optional)
ASM3_ADMIN_EMAIL=admin@yourdomain.com
ASM3_FROM_ADDRESS=noreply@yourdomain.com
ASM3_SMTP_HOST=smtp.gmail.com
ASM3_SMTP_PORT=587
ASM3_SMTP_USERNAME=your_email@gmail.com
ASM3_SMTP_PASSWORD=your_app_password
ASM3_SMTP_TLS=true
ASM3_USE_SENDMAIL=false

# Security Settings
ASM3_SESSION_SECURE_COOKIE=false
ASM3_EMAIL_ERRORS=false
ASM3_LOG_DEBUG=true

# Performance Settings
ASM3_CACHE_COMMON_QUERIES=true
ASM3_CACHE_SERVICE_RESPONSES=true
ASM3_MINIFY_JS=true
ASM3_ROLLUP_JS=true

# File Storage
ASM3_DBFS_STORE=database
# ASM3_DBFS_FILESTORAGE_FOLDER=/var/lib/asm3/media

# Map and Geocoding
ASM3_MAP_PROVIDER=osm
ASM3_MAP_PROVIDER_KEY=
ASM3_GEO_PROVIDER=nominatim
ASM3_GEO_PROVIDER_KEY=